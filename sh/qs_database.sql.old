drop table if exists Area;
drop table if exists Question;

drop table if exists class;

drop table if exists class__question;

drop table if exists knowledge;

drop table if exists question__knowledge;

drop table if exists question_type;

drop table if exists test_paper;

drop table if exists test_paper__question;

drop table if exists user;

/*==============================================================*/
/* Table: Area                                                  */
/*==============================================================*/
create table Area
(
   area_id              int primary key not null auto_increment,
   name                 varchar(256),
   parent_id            int,
   remark               varchar(4096),
   user_id              int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);
/*==============================================================*/
/* Table: Question                                              */
/*==============================================================*/
create table Question
(
   question_ID          int primary key not null auto_increment,
   question_type_id     int,
   area_id              int,
   name                 varchar(200),
   origin_mark          int comment '原始分数',
   level                int comment '难度等级：   1,2,3， 初始可以分为： 难，中，易；以后可以，根据需要划分。',
   weight               numeric(20,4) comment '权重，以后如果有需要可以使用， 分析',
   title                varchar(4096),
   answer               varchar(8192),
   option_1             varchar(2048),
   option_2             varchar(2048),
   option_3             varchar(2048),
   option_4             varchar(2048),
   option_5             varchar(2048),
   option_6             varchar(2048),
   option_7             varchar(2048),
   option_9             varchar(2048),
   option_8             varchar(2048),
   option_10            varchar(2048),
   remark               varchar(4096),
   user_id              int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


/*==============================================================*/
/* Table: class                                                 */
/*==============================================================*/
create table class
(
   class_id             int primary key not null auto_increment,
   name                 varchar(256),
   remark               varchar(4096),
   user_id              int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


/*==============================================================*/
/* Table: class__question                                       */
/*==============================================================*/
create table class__question
(
   cq_id                int primary key not null auto_increment,
   question_id          int,
   class_id             int,
   remark               varchar(4096),
   user_id              int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


/*==============================================================*/
/* Table: knowledge                                             */
/*==============================================================*/
create table knowledge
(
   knowledge_id         int primary key not null auto_increment,
   class_id             int,
   name                 varchar(4096),
   content              varchar(20480),
   level                int,
   remark               varchar(4096),
   user_id              int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


/*==============================================================*/
/* Table: question__knowledge                                   */
/*==============================================================*/
create table question__knowledge
(
   qk_id                int primary key not null auto_increment,
   question_id          int,
   knowledge_id         int,
   relevance            int default 100 comment '相关度--  0 ~100； 默认100',
   remark               varchar(4096),
   user_id              int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


/*==============================================================*/
/* Table: question_type                                         */
/*==============================================================*/
create table question_type
(
   question_type_id     int primary key not null,
   name                 varchar(256),
   remark               varchar(4096),
   user_id              int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


/*==============================================================*/
/* Table: test_paper                                            */
/*==============================================================*/
create table test_paper
(
   test_paper_id        int primary key not null,
   name                 varchar(2048),
   target_mark          int,
   remark               varchar(4096),
   crt_id               int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


/*==============================================================*/
/* Table: test_paper__question                                  */
/*==============================================================*/
create table test_paper__question
(
   tpq_id               int primary key not null auto_increment,
   question_id          int,
   test_paper_id        int,
   real_mark            int,
   remark               varchar(4096),
   user_id              int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


/*==============================================================*/
/* Table: user                                                  */
/*==============================================================*/
create table user
(
   user_id              int primary key not null auto_increment,
   name                 varchar(256),
   title                varchar(256),
   remark               varchar(4096),
   crt_id               int,
   crt_dt               timestamp,
   upd_dt               timestamp,
   is_del               int
);


